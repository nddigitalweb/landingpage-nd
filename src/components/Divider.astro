---
import Title from "../components/Title.astro";
---

<div class="flex flex-col items-center my-28 w-full">
  <div class="diagonal"></div>
  <div class="py-9 bg-[#2e2e2e]/70 w-[105%] rotate-[-3deg]">
    <div class="flex items-center flex-col rotate-3">
      <Title first="obten un" second="analisis de tu negocio" />
      <a
        href="/funnel"
        class="bg-[var(--main-color)] text-white font-medium text-lg rounded px-20 py-1.5 mt-4"
        >OBTENER</a
      >
    </div>
  </div>
  <div class="diagonal"></div>
</div>

<style>
  .diagonal {
    background-color: var(--main-color);
    height: 2rem;
    width: 100%;
    transform: rotate(-3deg);
  }
</style>
